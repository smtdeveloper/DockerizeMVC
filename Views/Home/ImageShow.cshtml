@model IEnumerable<string>
@{
    ViewData["Title"] = "ImageShow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ImageShow</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom Styles -->
    <style>
        .image-card {
            margin: 15px;
            border-radius: 15px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .image-card:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

            .image-card img {
                border-radius: 15px 15px 0 0;
            }

        .card-title {
            font-family: 'Comic Sans MS', cursive;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-5" style="font-family: 'Comic Sans MS', cursive; color: #FF6347;">
            🖼️ Fun & Colorful Image Gallery 🖼️
        </h1>
        <div class="row d-flex justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card image-card shadow-lg">
                        <img src="~/images/@item" class="card-img-top" alt="@item" style="width:100%; height:150px; object-fit: cover;">
                        <div class="card-body text-center bg-light">
                            <h6 class="card-title" style="color: #5a9;">@item</h6>
                            <!-- Resim silme formu -->
                            <form asp-action="DeleteImage" method="post" class="mt-2">
                                <input type="hidden" name="imageName" value="@item" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash3-fill"></i> Sil
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Icons (Optional) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</body>
</html>
